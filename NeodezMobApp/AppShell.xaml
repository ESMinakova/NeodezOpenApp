<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NeodezMobApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NeodezMobApp"
    xmlns:views="clr-namespace:NeodezMobApp.Views"
    Shell.FlyoutBehavior="Disabled"
    TitleColor="DarkBlue"
    BackgroundColor="CornflowerBlue">
    
    <TabBar Style="{StaticResource tabBarStyle}">

        <ShellContent
        Title="Услуги"
        ContentTemplate="{DataTemplate views:AllProductsPage}"         
        Icon="neo2.png"/>

        <ShellContent
        Title="О нас"
        ContentTemplate="{DataTemplate views:AboutPage}"
        Icon="icon_about.png" />

        <ShellContent
        Title="Для юр.лиц"
        ContentTemplate="{DataTemplate views:LLCPage}"
        Icon="icon_llc.png" />

    </TabBar>
</Shell>
